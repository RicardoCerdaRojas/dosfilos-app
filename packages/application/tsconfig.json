{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@dosfilos/domain": [
                "../domain/src"
            ],
            "@dosfilos/domain/*": [
                "../domain/src/*"
            ],
            "@dosfilos/infrastructure": [
                "../infrastructure/src"
            ],
            "@dosfilos/infrastructure/*": [
                "../infrastructure/src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}