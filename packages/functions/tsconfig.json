{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@dosfilos/domain": [
                "../domain/src"
            ],
            "@dosfilos/domain/*": [
                "../domain/src/*"
            ],
            "@dosfilos/infrastructure": [
                "../infrastructure/src"
            ],
            "@dosfilos/infrastructure/*": [
                "../infrastructure/src/*"
            ],
            "@dosfilos/application": [
                "../application/src"
            ],
            "@dosfilos/application/*": [
                "../application/src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}